@model IEnumerable<QuieroUn10.Models.Study>

@{
    ViewData["Title"] = "Estudios";
}
@if (ViewBag.errorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.errorMessage
    </div>
}
@if (ViewBag.successMessage != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.successMessage
    </div>
}
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Acronym)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Acronym)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID"><i class="fas fa-edit text-primary" title="Editar "></i></a> |
                    <a asp-action="Details" asp-route-id="@item.ID"><i class="fas fa-info-circle text-success" title="Detalles"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.ID"><i class="fas fa-trash-alt text-danger" title="Eliminar"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
