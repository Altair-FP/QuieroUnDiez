@model IEnumerable<QuieroUn10.Models.Task>

@{
    ViewData["Title"] = "Tareas";
}

<h1 class="text-center">Todas las tareas de la asignatura: </h1>
<br />
<h1 class="text-center"> @ViewBag.nombreAsig</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Descripción
            </th>
            <th>
                Tipología
            </th>
            <th>
                Comienzo
            </th>
            <th>
                Fin
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Start)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.End)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" asp-route-eli="@ViewBag.eli"><i class="fas fa-edit text-primary" title="Editar tarea"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.ID" asp-route-eli="@ViewBag.eli"><i class="fas fa-info-circle text-success" title="Detalles de la tarea"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.ID" asp-route-eli="@ViewBag.eli"><i class="fas fa-trash-alt text-danger" title="Eliminar tarea"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
