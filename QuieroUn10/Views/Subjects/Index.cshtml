@model IEnumerable<QuieroUn10.Models.Subject>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Listado de todas las asignaturas</h1>

<p>
    <a asp-action="Create">Crear nueva</a> |
    <a asp-action="ContactPDF">Imprimir listado</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Acronym)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Formal_Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student_Create)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Acronym)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Formal_Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student_Create)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a> 
                @if (item.Student_Create && !item.Formal_Subject)
                {
                    <a asp-action="HabDesH" asp-route-id="@item.ID">Habilitar</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
